{
  "name": "scrips",
  "version": "0.0.0-semantically-released",
  "description": "Tiny utility to manage subscriptions",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepublishOnly": "npm run build",
    "type-check": "npx tsc --noEmit",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "keywords": [
    "events",
    "subscriptions",
    "pubsub",
    "emitter"
  ],
  "author": "neeler",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neeler/scrips.git"
  },
  "bugs": {
    "url": "https://github.com/neeler/scrips/issues"
  },
  "homepage": "https://github.com/neeler/scrips#readme",
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "prettier": "^3.4.2",
    "semantic-release": "^25.0.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "volta": {
    "node": "24.13.0",
    "npm": "11.6.2"
  }
}
