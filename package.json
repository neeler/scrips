{
  "name": "scrips",
  "version": "0.1.0",
  "description": "Tiny utility to manage subscriptions",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepublishOnly": "npm run build",
    "type-check": "npx tsc --noEmit",
    "test": "vitest"
  },
  "keywords": [
    "events",
    "subscriptions",
    "pubsub",
    "emitter"
  ],
  "author": "neeler",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neeler/scrips.git"
  },
  "bugs": {
    "url": "https://github.com/neeler/scrips/issues"
  },
  "homepage": "https://github.com/neeler/scrips#readme",
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "prettier": "^3.4.2",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  },
  "volta": {
    "node": "22.13.1",
    "npm": "10.9.2"
  }
}
